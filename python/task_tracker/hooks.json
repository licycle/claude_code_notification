{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-task-tracker/hooks/goal_tracker.py",
            "timeout": 5
          }
        ]
      }
    ],

    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-task-tracker/hooks/permission_tracker.py",
            "timeout": 2
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-task-tracker/hooks/pre_tool_tracker.py",
            "timeout": 2
          }
        ]
      }
    ],

    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-task-tracker/hooks/subagent_tracker.py start",
            "timeout": 2
          }
        ]
      }
    ],

    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-task-tracker/hooks/subagent_tracker.py stop",
            "timeout": 2
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "TodoWrite|AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-task-tracker/hooks/progress_tracker.py",
            "timeout": 5
          }
        ]
      }
    ],

    "Notification": [
      {
        "matcher": "idle_prompt|elicitation_dialog|permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-task-tracker/hooks/notification_tracker.py",
            "timeout": 5
          }
        ]
      }
    ],

    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude-task-tracker/hooks/snapshot_hook.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
